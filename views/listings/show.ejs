<% layout("layouts/boilerplate") %>

<div class="row mt-3">
    <div class="col-8 offset-3">
        <h3>Listing details</h3>
    </div>
    <div class="card col-6 offset-3 show-card">
        <img
            src="<%=list.image.url%>"
            class="card-img-top show-img"
            alt="listing_image"
        />
        <div class="card-body">
            <p class="card-text">
                <b><%=list.title%></b><br />
                <%=list.description%> <br />
                <%=list.location%> <br />
                &#8377;<%=list.price.toLocaleString("en-IN")%> <br />
                <%=list.country%> <br />
            </p>
        </div>
    </div>
    <br />
    <div class="btns">
        <a href="/listings/<%=list._id%>/edit" class="btn btn-dark col-1 offset-3 edit-btn hello"
            >edit</a
        >
        <br />
        <br />
        <form action="/listings/<%=list._id%>?_method=delete" method="post">
            <button class="btn btn-dark offset-5">delete</button>
        </form>
    </div>
</div>
