<% layout("layouts/boilerplate") %>

<div class="row">
    <div class="col-8 offset-2 mt-3">
        <body>
            <h1>Edit your listing</h1>
            <form action="/listings/<%=list._id%>?_method=put" method="post">
                <div class="mb-3">
                    <label for="title" class="form-label">Title : </label>
                    <input
                        type="text"
                        value="<%=list.title%>"
                        name="title"
                        class="form-control"
                    />
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label"
                        >Description :
                    </label>
                    <textarea name="description" id="" class="form-control">
<%=list.description%></textarea
                    >
                </div>
                <div class="mb-3">
                    <label for="location" class="form-label">Location : </label>
                    <input
                        type="text"
                        value="<%=list.location%>"
                        name="location"
                        class="form-control"
                    />
                </div>
                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="price" class="form-label">Price : </label>
                        <input
                            type="number"
                            value="<%=list.price%>"
                            name="price"
                            class="form-control"
                        />
                    </div>
                    <div class="mb-3 col-md-8">
                        <label for="country" class="form-label"
                            >Country :
                        </label>
                        <input
                            type="text"
                            value="<%=list.country%>"
                            name="country"
                            class="form-control"
                        />
                    </div>
                </div>
                <div class="mb-3">
                    <label for="image[url]" class="form-label">Image : </label>
                    <input
                        type="text"
                        value="<%=list.image.url%>"
                        name="image[url]"
                        class="form-control"
                    />
                </div>
                <button class="btn btn-dark edit-btn mt-3">edit</button>
            </form>
        </body>
    </div>
</div>
